    printf "%s\n" "Install packer to use this command. https://developer.hashicorp.com/packer/install" >&2
    exit 1
  fi

  action="packer buildall"

  while [[ $# -gt 0 ]]; do
    key="$1"
    case "$key" in

      -?*)
        printf "invalid option: %s\n" "$key" >&2
        exit 1
        ;;

      *)

        printf "invalid argument: %s\n" "$key" >&2
        exit 1

        ;;

    esac
  done

}

